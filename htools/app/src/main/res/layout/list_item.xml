<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/dogimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mailTxt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:padding="5dp"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/mailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameTxt"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="usuario" />

        <TextView
            android:id="@+id/nameStatus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/dogimage"
            android:layout_below="@+id/dogimage"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:text="ATIVO"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mailTxt"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/dogimage"
            android:padding="10dp"
            android:text="usuario" />

        <TextView
            android:id="@+id/textDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nameStatus"
            android:layout_alignStart="@+id/mailTxt"
            android:layout_marginStart="23dp"
            android:text="Down" />

        <TextView
            android:id="@+id/textUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="up" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nameStatus"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/textDown"
            android:text="/"
            android:textStyle="bold" />

        <!--android:textAppearance="@style/?android:attr/textAppearanceLarge" -->
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>